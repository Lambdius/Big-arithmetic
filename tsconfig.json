{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./dir",
    "./**/*.test.ts"
  ]
}